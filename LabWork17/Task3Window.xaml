<Window x:Class="LabWork17.Task3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork17"
        mc:Ignorable="d"
        Title="Task3Window" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="500"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Width="200">
                <TextBlock Text="Сортировать по"/>
                <RadioButton Content="по возрастанию цены" Checked="PriceSortRadioButton_Checked"/>
                <RadioButton Content="по убыванию цены" Checked="PriceDescSortRadioButton_Checked"/>
                <RadioButton Content="по названию модели" Checked="ModelSortRadioButton_Checked"/>
            </StackPanel>
            <DataGrid x:Name="productsDataGrid"
                      Grid.Row="1"
                      CanUserAddRows="false"/>
        </Grid>
    </Grid>
</Window>
